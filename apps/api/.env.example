# Database
DATABASE_URL="postgresql://username:password@localhost:5432/arnav_abacus_db?schema=public"

# Node Environment (affects security settings)
# Set to 'production' to enable HTTPS-only secure cookies
NODE_ENV="development"

# JWT Secret (generate a strong random string) - REQUIRED
# Used for signing authentication tokens stored in httpOnly cookies
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Port
PORT=3000

# Frontend URL for CORS (REQUIRED - application will not start without this)
# This must be the exact origin of your frontend application
FRONTEND_URL="http://localhost:3001"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Email Configuration (Required for email notifications & receipts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# SMS Configuration (Required for SMS notifications)
# Get credentials from https://www.twilio.com/console
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Optional: AWS S3 (for file storage in production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=
